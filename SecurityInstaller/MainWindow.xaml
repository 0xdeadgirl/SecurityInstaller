<Window x:Name="Form"
        x:Class="SecurityInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecurityInstaller"
        Loaded="OnLoad"
        mc:Ignorable="d"
        Title="AutoTune"
        Height="450"
        Width="800"
        Background="#222526"
        WindowStyle="None"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        MinHeight="450"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="False">

    <Window.Resources>
        <Style x:Key="assetHeader">
            <Setter Property="ItemsControl.Background"
                    Value="Transparent" />
            <Setter Property="ItemsControl.Foreground"
                    Value="#E8E9ED" />
            <Setter Property="ItemsControl.BorderThickness"
                    Value="0,0,0,0" />
            <Setter Property="ItemsControl.FontSize"
                    Value="24" />
            <Setter Property="ItemsControl.FontWeight"
                    Value="Bold" />
            <Setter Property="ItemsControl.Margin"
                    Value="0,10,0,10" />
        </Style>

        <Style x:Key="assetInfo">
            <Setter Property="ItemsControl.Background"
                    Value="Transparent" />
            <Setter Property="ItemsControl.Foreground"
                    Value="#C0C1C9" />
            <Setter Property="ItemsControl.BorderThickness"
                    Value="0,0,0,0" />
            <Setter Property="ItemsControl.FontSize"
                    Value="16" />
            <Setter Property="ItemsControl.FontWeight"
                    Value="Bold" />
            <Setter Property="ItemsControl.Margin"
                    Value="10,0,0,10" />
        </Style>
    </Window.Resources>

    <Grid HorizontalAlignment="Left"
          Width="800">

        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Background="#033B81"
              Grid.ColumnSpan="2"
              MouseDown="Grid_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Image Source="nerd.ico">
                <Image.Effect>
                    <DropShadowEffect BlurRadius="15"
                                      Direction="-8"
                                      RenderingBias="Quality"
                                      ShadowDepth="2" />
                </Image.Effect>
            </Image>


            <TextBlock Text="AutoTune"
                       Foreground="#BFC9FE"
                       Grid.Column="1"
                       Grid.ColumnSpan="3"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontWeight="Medium">

                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="15"
                                      Direction="-8"
                                      RenderingBias="Quality"
                                      ShadowDepth="2" />
                </TextBlock.Effect>
            </TextBlock>

            <Button Name="MinimizeWin"
                    Content="-"
                    Foreground="#BFC9FE"
                    FontSize="12"
                    FontWeight="ExtraBold"
                    Grid.Column="23"
                    Click="Minimize_Click"
                    BorderThickness="0,0,0,0">

                <Button.Effect>
                    <DropShadowEffect BlurRadius="15"
                                      Direction="-8"
                                      RenderingBias="Quality"
                                      ShadowDepth="2" />
                </Button.Effect>

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background"
                                Value="Transparent" />
                        <Setter Property="Cursor"
                                Value="Hand" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="Gray" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Name="ExitBtn"
                    Content="X"
                    Foreground="#BFC9FE"
                    FontSize="12"
                    FontWeight="Medium"
                    Grid.Column="24"
                    Click="ExitBtn_Click"
                    BorderThickness="0,0,0,0">

                <Button.Effect>
                    <DropShadowEffect BlurRadius="15"
                                      Direction="-8"
                                      RenderingBias="Quality"
                                      ShadowDepth="2" />
                </Button.Effect>

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background"
                                Value="Transparent" />
                        <Setter Property="Cursor"
                                Value="Hand" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="Red" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>


                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <StackPanel Grid.Row="1">

            <StackPanel>

                <StackPanel.Effect>
                    <DropShadowEffect BlurRadius="40"
                                      Direction="-8"
                                      RenderingBias="Quality"
                                      ShadowDepth="2" />
                </StackPanel.Effect>

                <StackPanel Orientation="Horizontal"
                            Margin="10, 10, 0, 0">

                    <TextBlock Text="Nerds On Call Security Suite"
                               Foreground="#D6D8DE"
                               FontSize="20"
                               FontWeight="Medium"
                               VerticalAlignment="Center" />
                </StackPanel>

                <Grid Grid.Row="1"
                      Background="Transparent"
                      Width="350"
                      Height="300"
                      Margin="0, 30, 0, 0">
                    <Border BorderBrush="#46494D"
                            BorderThickness="1,1,1,1"
                            CornerRadius="5"
                            Background="#46494D">
                    </Border>
                    <TabControl Background="Transparent"
                                BorderThickness="0,0,0,0"
                                Margin="0,-20,0,0">
                        <TabControl.Resources>
                            <Style TargetType="{x:Type TabItem}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type TabItem}">
                                            <Grid>
                                                <Border Name="Border"
                                                        Margin="0,0,0,0"
                                                        Background="#27292B"
                                                        BorderThickness="0,0,0,0"
                                                        CornerRadius="2"
                                                        Height="20">

                                                    <ContentPresenter x:Name="ContentSite"
                                                                      VerticalAlignment="Center"
                                                                      HorizontalAlignment="Center"
                                                                      ContentSource="Header"
                                                                      RecognizesAccessKey="True"
                                                                      TextBlock.Foreground="#E8E9ED">
                                                    </ContentPresenter>
                                                </Border>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected"
                                                         Value="True">
                                                    <Setter Property="Panel.ZIndex"
                                                            Value="100" />
                                                    <Setter TargetName="Border"
                                                            Property="Background"
                                                            Value="#46494D" />
                                                    <Setter TargetName="Border"
                                                            Property="Margin"
                                                            Value="0,0,0,2" />
                                                </Trigger>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter TargetName="Border"
                                                            Property="Background"
                                                            Value="#46494D" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Cursor"
                                        Value="Hand" />
                            </Style>
                        </TabControl.Resources>

                        <TabItem x:Name="programs"
                                 Header="Programs"
                                 Width="80"
                                 Margin="0,0,0,0">
                            <StackPanel Background="Transparent"
                                        Margin="0,30,0,0">

                                <StackPanel.Effect>
                                    <DropShadowEffect BlurRadius="15"
                                                      Direction="-8"
                                                      RenderingBias="Quality"
                                                      ShadowDepth="2" />
                                </StackPanel.Effect>

                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Cursor"
                                                Value="Hand" />
                                    </Style>
                                </StackPanel.Style>

                                <StackPanel.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="1.1"
                                                        ScaleY="1.1" />
                                        <TranslateTransform Y="-15" />
                                    </TransformGroup>
                                </StackPanel.RenderTransform>

                                <CheckBox x:Name="cbSwitch"
                                          Content="ALL Tuneup Tools"
                                          Foreground="#E8E9ED"
                                          Margin="20,5,0,5"
                                          IsChecked="True"
                                          Click="CBSwitch_Click"
                                          FontWeight="SemiBold" />
                                <CheckBox x:Name="adw"
                                          Content="ADWCleaner"
                                          Foreground="#E8E9ED"
                                          Margin="45,5,0,5"
                                          IsChecked="True"
                                          FontWeight="SemiBold" />
                                <CheckBox x:Name="mb"
                                          Content="Malwarebytes"
                                          Foreground="#E8E9ED"
                                          Margin="45,5,0,5"
                                          IsChecked="True"
                                          FontWeight="SemiBold" />
                                <CheckBox x:Name="gu"
                                          Content="Glary Utilities"
                                          Foreground="#E8E9ED"
                                          Margin="45,5,0,5"
                                          IsChecked="True"
                                          FontWeight="SemiBold" />
                                <CheckBox x:Name="cc"
                                          Content="CCleaner"
                                          Foreground="#E8E9ED"
                                          Margin="45,5,0,5"
                                          IsChecked="True"
                                          FontWeight="SemiBold" />
                            </StackPanel>
                        </TabItem>

                        <TabItem x:Name="tools"
                                 Header="Tools"
                                 Width="100"
                                 Margin="0,0,0,0">
                            <StackPanel Background="Transparent"
                                        Margin="0,30,0,0">

                                <StackPanel.Effect>
                                    <DropShadowEffect BlurRadius="15"
                                                      Direction="-8"
                                                      RenderingBias="Quality"
                                                      ShadowDepth="2" />
                                </StackPanel.Effect>

                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Cursor"
                                                Value="Hand" />
                                    </Style>
                                </StackPanel.Style>

                                <StackPanel.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="1.1"
                                                        ScaleY="1.1" />
                                        <TranslateTransform Y="-15" />
                                    </TransformGroup>
                                </StackPanel.RenderTransform>

                                <CheckBox x:Name="sfc"
                                          Content="Start Dism/SFC"
                                          Foreground="#E8E9ED"
                                          Margin="20,5,0,5"
                                          FontWeight="SemiBold" />
                                <CheckBox x:Name="tpApps"
                                          Content="Update Third Party Applications"
                                          Foreground="#E8E9ED"
                                          Margin="20,5,0,5"
                                          FontWeight="SemiBold" />
                                <CheckBox x:Name="noc"
                                          Content="Make NOC Folder"
                                          Foreground="#E8E9ED"
                                          Margin="20,5,0,5"
                                          FontWeight="SemiBold" />
                                <CheckBox x:Name="remote"
                                          Content="Install/Repair NOC Calling Card"
                                          Foreground="#E8E9ED"
                                          Margin="20,5,0,5"
                                          FontWeight="SemiBold" />
                                <CheckBox x:Name="uBlock"
                                          Content="Install UBlock Origin to Edge/Chrome"
                                          Foreground="#E8E9ED"
                                          Margin="20,5,0,5"
                                          FontWeight="SemiBold" />
                                <CheckBox x:Name="bloatkiller"
                                          Content="Disabled unnecessary services"
                                          Foreground="#E8E9ED"
                                          Margin="20,5,0,5"
                                          FontWeight="SemiBold" />
                            </StackPanel>
                        </TabItem>
                    </TabControl>
                </Grid>

                <StackPanel Orientation="Horizontal"
                            Margin="25, 25, 0, 0">

                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Cursor"
                                    Value="Hand" />
                        </Style>
                    </StackPanel.Style>

                    <Button Name="StartBtn"
                            Content="Start"
                            Foreground="#BFC9FE"
                            FontSize="14"
                            FontWeight="Medium"
                            Click="StartBtn_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background"
                                        Value="#033B81" />
                                <Setter Property="Cursor"
                                        Value="Hand" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="#002B54" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="100"
                                        Height="25"
                                        CornerRadius="5"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <CheckBox x:Name="download"
                              Content="Download"
                              Foreground="#E8E9ED"
                              Margin="10,5,5,5"
                              IsChecked="True"
                              FontWeight="SemiBold" />
                    <CheckBox x:Name="install"
                              Content="Install"
                              Foreground="#E8E9ED"
                              Margin="5,5,5,5"
                              IsChecked="True"
                              FontWeight="SemiBold" />
                    <CheckBox x:Name="run"
                              Content="Run"
                              Foreground="#E8E9ED"
                              Margin="5,5,5,5"
                              IsChecked="True"
                              FontWeight="SemiBold" />
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <Image Name="astro"
               Panel.ZIndex="-10"
               Grid.RowSpan="2"
               Grid.ColumnSpan="2"
               Height="450"
               Width="800"
               Source="Images\astro.png"
               Stretch="Fill">
        </Image>

        <StackPanel Grid.Row="1"
                    Grid.Column="1">
            <StackPanel.Effect>
                <DropShadowEffect BlurRadius="40"
                                  Direction="-8"
                                  RenderingBias="Quality"
                                  ShadowDepth="2" />
            </StackPanel.Effect>

            <StackPanel>
                <TabControl Margin="10,5,10,0"
                            Height="350"
                            Background="Transparent"
                            BorderThickness="0,0,0,0">
                    <TabControl.Resources>
                        <Style TargetType="{x:Type TabItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type TabItem}">
                                        <Grid>
                                            <Border Name="Border"
                                                    Margin="0,0,0,-3"
                                                    Background="#002B54"
                                                    BorderBrush="#2360DB"
                                                    BorderThickness="0,0,0,0"
                                                    CornerRadius="2"
                                                    Height="20">

                                                <ContentPresenter x:Name="ContentSite"
                                                                  VerticalAlignment="Center"
                                                                  HorizontalAlignment="Center"
                                                                  ContentSource="Header"
                                                                  RecognizesAccessKey="True"
                                                                  TextBlock.Foreground="#8E9399">
                                                </ContentPresenter>
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected"
                                                     Value="True">
                                                <Setter Property="Panel.ZIndex"
                                                        Value="100" />
                                                <Setter TargetName="Border"
                                                        Property="Background"
                                                        Value="#033B81" />
                                                <Setter TargetName="Border"
                                                        Property="BorderThickness"
                                                        Value="1,1,1,2" />
                                                <Setter TargetName="Border"
                                                        Property="Margin"
                                                        Value="0,0,0,-2" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">
                                                <Setter TargetName="Border"
                                                        Property="Background"
                                                        Value="#033B81" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Cursor"
                                    Value="Hand" />
                        </Style>
                    </TabControl.Resources>

                    <TabItem x:Name="AssetInfo"
                             Header="Asset Info"
                             Width="80">
                        <Grid Background="Transparent">
                            <Grid.Effect>
                                <DropShadowEffect BlurRadius="30"
                                                  Direction="-8"
                                                  RenderingBias="Quality"
                                                  ShadowDepth="2" />
                            </Grid.Effect>
                            <ScrollViewer Background="Transparent">
                                <Grid Margin="10,10,10,10">
                                    <StackPanel>
                                        <TextBox IsReadOnly="True" Style="{StaticResource assetHeader}">Asset Name:</TextBox>
                                        <TextBox x:Name="name" IsReadOnly="True" Style="{StaticResource assetInfo}"></TextBox>
                                        <TextBox IsReadOnly="True" Style="{StaticResource assetHeader}">Serial Number:</TextBox>
                                        <TextBox x:Name="serialNum" Style="{StaticResource assetInfo}"></TextBox>
                                        <TextBox IsReadOnly="True" Style="{StaticResource assetHeader}">Make / Model:</TextBox>
                                        <TextBox x:Name="makeModel"  IsReadOnly="True" Style="{StaticResource assetInfo}"></TextBox>
                                        <TextBox IsReadOnly="True" Style="{StaticResource assetHeader}">Motherboard:</TextBox>
                                        <TextBox x:Name="bios" IsReadOnly="True" Style="{StaticResource assetInfo}"></TextBox>
                                        <TextBox IsReadOnly="True" Style="{StaticResource assetHeader}">Operating System:</TextBox>
                                        <TextBox x:Name="osInfo" IsReadOnly="True" Style="{StaticResource assetInfo}"></TextBox>
                                        <TextBox IsReadOnly="True" Style="{StaticResource assetHeader}">Storage:</TextBox>
                                        <TextBox x:Name="storage" IsReadOnly="True" Style="{StaticResource assetInfo}"></TextBox>
                                        <TextBox IsReadOnly="True" Style="{StaticResource assetHeader}">Graphics:</TextBox>
                                        <TextBox x:Name="gpu" IsReadOnly="True" Style="{StaticResource assetInfo}"></TextBox>
                                        <TextBox IsReadOnly="True" Style="{StaticResource assetHeader}">Memory:</TextBox>
                                        <TextBox x:Name="memory" IsReadOnly="True" Style="{StaticResource assetInfo}"></TextBox>
                                        <TextBox IsReadOnly="True" Style="{StaticResource assetHeader}">Processor:</TextBox>
                                        <TextBox x:Name="cpu" IsReadOnly="True" Style="{StaticResource assetInfo}"></TextBox>
                                        <TextBox IsReadOnly="True" Style="{StaticResource assetHeader}">MAC Address:</TextBox>
                                        <TextBox x:Name="mac" IsReadOnly="True" Style="{StaticResource assetInfo}"></TextBox>
                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>
                            <Button Margin="295,295,35,10"
                                    Name="CopyBtn"
                                    Content="Copy"
                                    FontSize="11"
                                    Click="CopyBtn_Click"
                                    Foreground="#E8E9ED"
                                    FontWeight="Bold"
                                    BorderThickness="0,0,0,0">

                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background"
                                                Value="#033B81" />
                                        <Setter Property="Cursor"
                                                Value="Hand" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">
                                                <Setter Property="Background"
                                                        Value="#002B54" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="5"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                                                              HorizontalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </TabItem>

                    <TabItem x:Name="DebugProgress"
                             Header="Progress"
                             Width="80">
                        <Grid Background="Transparent"
                              Width="377">
                            <Image Source="Images/cortana.png"
                                   Panel.ZIndex="10"
                                   Margin="237,182,-37,0">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="30"
                                                      Direction="-8"
                                                      RenderingBias="Quality"
                                                      ShadowDepth="2"
                                                      Color="LightBlue" />
                                </Image.Effect>
                            </Image>
                            <Border CornerRadius="2"
                                    BorderThickness="0,0,0,0"
                                    BorderBrush="#2360DB"
                                    Background="Black">

                            </Border>
                            <TextBox x:Name="ScriptOutput"
                                     Background="Transparent"
                                     Foreground="DarkOrange"
                                     Margin="5,5,0,5"
                                     IsReadOnly="True"
                                     BorderThickness="0,0,0,0">

                                <TextBox.Effect>
                                    <DropShadowEffect BlurRadius="30"
                                                      Direction="-8"
                                                      RenderingBias="Quality"
                                                      ShadowDepth="2"
                                                      Color="DarkOrange" />
                                </TextBox.Effect>
                            </TextBox>
                        </Grid>
                    </TabItem>
                </TabControl>
            </StackPanel>
            <StackPanel Margin="10,10,10,0">
                <StackPanel.Effect>
                    <DropShadowEffect BlurRadius="15"
                                      Direction="-8"
                                      RenderingBias="Quality"
                                      ShadowDepth="2" />
                </StackPanel.Effect>
                <TextBox Background="Transparent"
                         x:Name="ProgressText"
                         Foreground="DarkOrange"
                         IsReadOnly="True"
                         BorderThickness="0,0,0,0">
                </TextBox>
            </StackPanel>
            <StackPanel Margin="10, 0, 10, 0">
                <ProgressBar Height="10"
                             Name="ProgressBar1"
                             Value="0"
                             Foreground="#002B54"
                             Background="#8E9399"
                             BorderThickness="0,0,0,0">
                </ProgressBar>
                <ProgressBar Height="10"
                             Name="ProgressBar2"
                             Value="0"
                             Margin="0,2,0,0"
                             Foreground="#033B81"
                             Background="#8E9399"
                             BorderThickness="0,0,0,0">
                </ProgressBar>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>